# ===========================================
# potrzebny.ai - Environment Variables
# ===========================================
# Skopiuj ten plik do .env.local i uzupełnij wartości

# -------------------------------------------
# SUPABASE (wymagane)
# -------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJxxx...
SUPABASE_SERVICE_ROLE_KEY=eyJxxx...

# -------------------------------------------
# STRIPE (wymagane dla płatności)
# -------------------------------------------
STRIPE_SECRET_KEY=sk_live_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Price IDs - utwórz produkty w Stripe Dashboard
STRIPE_STARTER_PRICE_ID=price_xxx
STRIPE_PRO_PRICE_ID=price_xxx
STRIPE_TEAM_PRICE_ID=price_xxx

# -------------------------------------------
# AI - DARMOWE PROVIDERY
# -------------------------------------------

# Groq (DARMOWE - transkrypcja + generowanie)
# Zarejestruj się na: https://console.groq.com
GROQ_API_KEY=gsk_xxx

# ElevenLabs (DARMOWE 10k znaków/mies - Text-to-Speech)
# Zarejestruj się na: https://elevenlabs.io
ELEVENLABS_API_KEY=xxx

# Semantic Scholar (DARMOWE - badania naukowe)
# Opcjonalne, działa bez klucza ale z limitami
# https://www.semanticscholar.org/product/api
SEMANTIC_SCHOLAR_API_KEY=

# -------------------------------------------
# AI - PŁATNE (opcjonalne backup)
# -------------------------------------------

# OpenAI (płatne - fallback)
OPENAI_API_KEY=sk-xxx

# Replicate (dla generowania wideo)
# https://replicate.com - darmowy tier dostępny
REPLICATE_API_TOKEN=r8_xxx

# -------------------------------------------
# APP CONFIG
# -------------------------------------------
NEXT_PUBLIC_APP_URL=https://potrzebny.ai
NODE_ENV=production
